<!--            app:layout_constraintEnd_toStartOf="@+id/buttonEditCourse"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/editTextCourseNewName" />-->

        <TextView
            android:id="@+id/textViewCourseNewNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewCourseNewNameTitle_string"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCourseNewName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>